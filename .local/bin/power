#!/bin/sh

DIALOG_RESULT=$(echo -e 'Quit spectrwm\nHibernate\nReboot\nPoweroff' | dmenu -i -c -g 1 -l 10 -nb '#000000' -nf '#c3cdc8' -sb '#947cc3' -fn 'JetBrains Mono Nerd Font-12' -p "SYSTEM" )

case $DIALOG_RESULT in
        "Quit spectrwm" ) pkill spectrwm ;;
        "Hibernate") systemctl hibernate ;;
        "Reboot") systemctl reboot ;;
        "Poweroff") systemctl poweroff ;;
        *) exit 0
esac
