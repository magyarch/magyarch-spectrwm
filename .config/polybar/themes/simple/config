ramp-coreload-2 = ‚ñÉ
ramp-coreload-2-foreground = #d3ffce
ramp-coreload-3 = ‚ñÑ
ramp-coreload-3-foreground = #5ac18e
ramp-coreload-4 = ‚ñÖ
ramp-coreload-4-foreground = #fff68f
ramp-coreload-5 = ‚ñÜ
ramp-coreload-5-foreground = #fff68f
