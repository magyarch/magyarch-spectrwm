(defwidget musicwidget []
	(box 	:class "music-player"
			:orientation "v"
		 	:space-evenly false
		 	:halign "fill"
	(transform :translate-y "20px"
	(box 	:orientation "v"
			:valign "fill"
			:height 100
		 	:space-evenly false
		 	:halign "center"
		 	:spacing 10
 	(label  :class "song"
		 	:limit-width 18
		 	:text title)
	(label  :class "artist"
		 	:limit-width 15
			:halign "fill"
		 	:text artist)
	(transform :translate-y "-15px"
	(box 	:orientation "h"
			:class "buttons"
		 	:space-evenly false
			:halign "center"
			:valign "start"
			:spacing 20
			:height 60
			(button :class "btn_prev" :onclick "~/.config/eww/music.sh previous" "")
			(button :class "btn_play" :onclick "~/.config/eww/music.sh toggle" playpause)
			(button :class "btn_next" :onclick "~/.config/eww/music.sh next" "")))))))

(defwindow music
	:geometry (geometry :x "-10px"
						:y "60px"
						:height "150px"
						:width "300px"
            :anchor "top right")
	:wm-ignore true
(musicwidget))

