(defwidget timewidget []
	(box :class "timewindow"
		 :orientation "h"
		 :valign "center"
		 :halign "center"
		 :space-evenly true
		 :height 147
		 :width 145
		 :spacing 0
		(overlay
			(transform :translate-y "-20px"
					   :translate-x "-5px"
				(box :class "hour"
					 :valign "center"
					 :halign "center"
					 "${hour}:"))
			(transform :translate-y "35px"
					   :translate-x "25px"
				(box :class "minute"
					 "${minute}")))))

(defwindow time
	:geometry (geometry :x "-62px"
						:y "410px"
						:width "300px"
						:height "50px")
	:wm-ignore true
(timewidget))

