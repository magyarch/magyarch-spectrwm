(defpoll hour :interval "1s" `date +%H`)
(defpoll minute :interval "1m" `date +%M`)
(defpoll calendar_day :interval "10h"
    "date '+%d'")
(defpoll calendar_month :interval "10h"
    "scripts/calendar")
(defpoll calendar_year :interval "10h"
    "date '+%Y'")
(defpoll art		:interval "5s"  "~/.config/eww/music.sh coverloc")
(defpoll title		:interval "5s"  "~/.config/eww/music.sh title")
(defpoll artist		:interval "5s"  "~/.config/eww/music.sh artist")
(defpoll playpause	:interval "5s"  "~/.config/eww/music.sh statusicon")
(defpoll songtime 	:interval "1s"  "~/.config/eww/song-duration.sh")

(defwidget cal []
	(box :class "cal-box"
		 :orientation "v"
		 :valign "center"
		 :halign "center"
	(box :class "cal-inner-box"
		 :orientation "v"
		 :space-evenly false
		 :width 420
		(calendar :class "cal"
				  :day calendar_day
				  :month calendar_month
				  :year calendar_year))))

(defwindow calendar
	:geometry (geometry :x "30px"
			    :y "75px"
			    :width "275px"
			    :height "190px")
	:stacking "fg"
(cal))

(defwidget powermenucontent []
  (box :orientation "h"
       :class "powermenu-container"
    (box :class "shutdown-btn-box"
         :orientation "h"
      (button :class "btn"
              :tooltip "Shutdown"
              :onclick "eww close powermenu && poweroff"
              "⏻")
    )
    (box :class "reboot-btn-box"
         :orientation "h"
      (button :class "btn"
              :tooltip "Reboot"
              :onclick "eww close powermenu && reboot"
              "勒")
    )
    (box :class "exit-btn-box"
         :orientation "h"
      (button :class "btn"
              :tooltip "Logout"
              :onclick "bspc quit"
              "")
    )
  )
)

(defwindow powermenu
  :geometry (geometry :x "0%"
                      :y "0%"
                      :width "30%"
                      :height "15%"
                      :anchor "center center")
  :wm-ignore true
(powermenucontent))

